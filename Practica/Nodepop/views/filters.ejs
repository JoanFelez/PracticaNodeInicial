<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='../stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <h2>Filtered Ads</h2>
    <% filtered.forEach(function(value){%>
      <h3><%= value.name%></h3>
      <p>Intention: <%= value.intention%> </p>
      <p>Price: <%= value.price%> </p>
      <p>Tags: <%- JSON.stringify(value.tags).replace(/"|\[|\]/g, "") %> </p>
      <img src="../images/<%=value.photo%>" alt="<%=value.photo%>"/>
    <% }) %>
    <h3>Filtered by:</h3>
      <p> <%- JSON.stringify(query).replace(/"|\[|\]/g, "") %> </p>
  </body>